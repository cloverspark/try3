<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>@ViewData["title"]</title>
    
</head>
<body class="text-center ">
    <header>
        <h1 class="mb-3 p-3 bg-dark text-white">
            @ViewData["Header"]
        </h1>
    </header>
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        @*@Html.ActionLink("Home Page", "Index", "Home")*@
        <ul class="navbar-nav">
            <a asp-controller="Home" asp-action="Index" class="nav-link active text-info bg-dark" aria-current="page">Home page</a> 
            <a asp-controller="Home" asp-action="About" class="nav-link active text-info bg-dark" aria-current="page">About Page</a> 
            <a asp-controller="Home" asp-action="ThankYou" class="nav-link active text-info bg-dark" aria-current="page">TY Page</a> 
        </ul>
    </nav>
    <main>
        @RenderBody()
    </main>
    <footer class="bg-dark text-center text-white">
        &copy; @DateTime.Today.Year
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>